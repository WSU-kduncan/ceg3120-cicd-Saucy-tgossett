[
  {
    "id": "deploy-angular",
    "execute-command": "/home/ubuntu/deployment/redeploy_container.sh",
    "command-working-directory": "/home/ubuntu",
    "trigger-rule":
    {
     "and":
     [
       {
         "match":
         {
           "type": "value",
           "value": "run",
           "parameter":
           {
             "source": "payload",
             "name": "action"
           }
         }
       },
       {
         "match":
         {
           "type": "payload-hmac-sha1",
           "secret": "supercalifragilisticexpialidocious",
           "parameter":
            {
             "source": "header",
             "name": "X-Hub-Signature"
            }
          }
        }
      ]
    }
  }
]
